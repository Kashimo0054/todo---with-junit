pipeline {
    agent any

    environment {
        JAVA_HOME = "/opt/java/openjdk"
        PATH = "${JAVA_HOME}/bin:/usr/local/bin:/usr/bin:/bin"
        SONARQUBE = "SonarQube-Docker"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Kashimo0054/todo---with-junit.git'
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Using Java version:"'
                sh 'java -version'
                sh 'echo "Using Maven version:"'
                sh 'mvn -version'
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
                junit 'target/surefire-reports/*.xml'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube-Docker') {
                    sh '''
                        mvn sonar:sonar \
                            -Dsonar.projectKey=todo-junit \
                            -Dsonar.projectName="Todo App with JUnit"
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed. Check the logs above.'
        }
    }
}
