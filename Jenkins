pipeline {
    agent any

    environment {
        // Java and Maven configuration
        JAVA_HOME = '/usr/lib/jvm/temurin-21-jdk-amd64'
        PATH = "${JAVA_HOME}/bin:/usr/share/maven/bin:${PATH}"

        // SonarQube configuration
        SONAR_HOST_URL = 'http://SonarQube-Docker:9000'
        SONAR_PROJECT_KEY = 'todo-with-junit'
        SONAR_LOGIN = credentials('sonarqube-token')

        // JFrog configuration
        JFROG_URL = 'https://bitwranglers.jfrog.io/artifactory'
        JFROG_REPO = 'maven-local'   // replace with your actual repo name
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Kashimo0054/todo---with-junit.git'
            }
        }

        stage('Verify Java and Maven Versions') {
            steps {
                sh '''
                    echo "Using Java version:"
                    java -version
                    echo "Using Maven version:"
                    mvn -version
                '''
            }
        }

        stage('Build (Skip Tests)') {
            steps {
                echo "Building project with Java 21 (tests skipped)..."
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube-Docker') {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_LOGIN}
                    '''
                }
            }
        }

        stage('Package Artifact') {
            steps {
                echo "Archiving JAR artifact..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Upload to JFrog Artifactory') {
            steps {
                // Use the same Secret Text credential (ID = jenkins-build)
                withCredentials([string(credentialsId: 'jenkins-build', variable: 'jfrog')]) {
                    script {
                        // Get jar file path and name
                        def jarFile = sh(script: "ls target/*.jar | head -n 1", returnStdout: true).trim()
                        def artifactName = jarFile.tokenize('/')[-1]

                        // Optional: Add Jenkins build number to file name
                        def versionedName = artifactName.replace('.jar', "-${BUILD_NUMBER}.jar")

                        echo "Uploading ${versionedName} to Artifactory..."

                        // Upload and capture HTTP status
                        def status = sh(script: """
                            curl -w "%{http_code}" -s -o /dev/null \
                                 -T ${jarFile} \
                                 -H "Authorization: Bearer ${jfrog}" \
                                 "${JFROG_URL}/${JFROG_REPO}/${versionedName}"
                        """, returnStdout: true).trim()

                        if (status != '201' && status != '200') {
                            error("❌ Upload failed! HTTP status: ${status}")
                        } else {
                            echo "✅ Upload successful (HTTP ${status})"
                            echo "Artifact URL: ${JFROG_URL}/${JFROG_REPO}/${versionedName}"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build, SonarQube analysis, and Artifactory upload completed successfully using Java 21!"
        }
        failure {
            echo "❌ Build failed. Check logs for details."
        }
    }
}
