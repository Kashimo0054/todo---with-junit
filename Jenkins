pipeline {
    agent any

    environment {
        // Java & Maven setup
        JAVA_HOME = '/usr/lib/jvm/temurin-21-jdk-amd64'
        PATH = "${JAVA_HOME}/bin:/usr/share/maven/bin:${PATH}"

        // SonarQube environment
        SONAR_HOST_URL = 'http://SonarQube-Docker:9000'
        SONAR_PROJECT_KEY = 'todo-with-junit'
        SONAR_LOGIN = credentials('sonarqube-token') // Jenkins credential for SonarQube token
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Kashimo0054/todo---with-junit.git'
            }
        }

        stage('Verify Java and Maven Versions') {
            steps {
                sh '''
                    echo "Using Java version:"
                    java -version
                    echo "Using Maven version:"
                    mvn -version
                '''
            }
        }

        stage('Build (Skip Tests)') {
            steps {
                echo "Building project with Java 21 (tests skipped)..."
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube-Docker') {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_LOGIN}
                    '''
                }
            }
        }

        stage('Package Artifact') {
            steps {
                echo "Archiving JAR artifact..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Upload to JFrog Artifactory') {
            steps {
                // Load JFrog token (Secret Text ID: jenkins-build)
                withCredentials([string(credentialsId: 'jenkins-build', variable: 'jfrog')]) {
                    sh '''
                        echo "--- Uploading artifact to JFrog Artifactory ---"

                        # Define JFrog repository and file details
                        JFROG_URL="https://bitwranglers.jfrog.io/artifactory"
                        REPO="example-repo-local"
                        ARTIFACT_PATH="target/todo-with-junit-1.0-SNAPSHOT.jar"

                        # Upload artifact
                        curl -s -X PUT \
                             -H "Authorization: Bearer $jfrog" \
                             -T "$ARTIFACT_PATH" \
                             "$JFROG_URL/$REPO/todo-with-junit-1.0-SNAPSHOT.jar"

                        if [ $? -eq 0 ]; then
                            echo "✅ Success: Artifact uploaded to JFrog"
                        else
                            echo "❌ Failed to upload artifact to JFrog"
                            exit 1
                        fi
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build, SonarQube analysis, and JFrog upload completed successfully using Java 21!"
        }
        failure {
            echo "❌ Build failed. Check logs for details."
        }
    }
}
