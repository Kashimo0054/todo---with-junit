pipeline {
    agent any

    environment {
        JAVA_HOME = '/usr/lib/jvm/temurin-21-jdk-amd64'
        PATH = "${JAVA_HOME}/bin:/usr/share/maven/bin:${PATH}"

        SONAR_HOST_URL = 'http://SonarQube-Docker:9000'
        SONAR_PROJECT_KEY = 'todo-with-junit'
        SONAR_LOGIN = credentials('sonarqube-token')

        JFROG_URL = 'https://bitwranglers.jfrog.io/artifactory'
        JFROG_REPO = 'maven-local'  // or your target repo name
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Kashimo0054/todo---with-junit.git'
            }
        }

        stage('Verify Java and Maven Versions') {
            steps {
                sh '''
                    echo "Using Java version:"
                    java -version
                    echo "Using Maven version:"
                    mvn -version
                '''
            }
        }

        stage('Build (Skip Tests)') {
            steps {
                echo "Building project with Java 21 (tests skipped)..."
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube-Docker') {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_LOGIN}
                    '''
                }
            }
        }

        stage('Package Artifact') {
            steps {
                echo "Archiving JAR artifact..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Upload to JFrog Artifactory') {
            steps {
                withCredentials([string(credentialsId: 'jfrog-token', variable: 'JFROG_TOKEN')]) {
                    script {
                        def jarFile = sh(script: "ls target/*.jar | head -n 1", returnStdout: true).trim()
                        def artifactName = jarFile.tokenize('/')[-1]

                        echo "Uploading ${artifactName} to Artifactory..."

                        sh """
                            curl -s -T ${jarFile} \\
                                 -H "Authorization: Bearer ${JFROG_TOKEN}" \\
                                 "${JFROG_URL}/${JFROG_REPO}/${artifactName}"
                        """

                        echo "✅ Artifact uploaded to ${JFROG_URL}/${JFROG_REPO}/${artifactName}"
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build, SonarQube analysis, and Artifactory upload completed successfully using Java 21!"
        }
        failure {
            echo "❌ Build failed. Check logs for details."
        }
    }
}
